RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.)\?$ index.php?r=$1 [L,QSA]


Options -Indexes


php_value upload_max_filesize 30M
php_value post_max_size 100M